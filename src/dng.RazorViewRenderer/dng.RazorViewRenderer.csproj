<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Version>1.0.0</Version>
    <Authors>DotNetGeek (Daniel Mueller)</Authors>
    <Product>dng.RazorViewRenderer</Product>
    <RepositoryUrl>https://github.com/dotnetgeek/dng.RazorViewRenderer</RepositoryUrl>
    <PackageProjectUrl>https://github.com/dotnetgeek/dng.RazorViewRenderer</PackageProjectUrl>

    <Description>C# library that renders a Razorview to a string.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags> aspnetcore razorview</PackageTags>
    <NeutralLanguage>English</NeutralLanguage>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

  </PropertyGroup>
  
  <ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>
</Project>
